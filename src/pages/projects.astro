---
import BaseLayout from "../layouts/BaseLayout.astro";
import HorizontalCard from "../components/HorizontalCard.astro";
---

<BaseLayout title="Projects" sideBarActiveItemID="projects">
  <div>
    <div class="text-3xl w-full font-bold mb-5">University Projects</div>
  </div>

  <HorizontalCard
    title="Banking App Design"
    img="/projectfiles/bankingapp.png"
    desc="Responsive Design Concept made with Figma"
    url="https://www.figma.com/design/SSy7okgJEX9KMqOuNXyQP5/Huber_Franz-Aurel_cc231014?node-id=1-10"
  />

  <div class="divider my-0"></div>

  <HorizontalCard
    title="Habit Tracker App"
    img="/projectfiles/calendaricon.png"
    desc="Native Android app developed with Kotlin"
    url="https://marcfichtl.github.io/habittracker/"
    badge="NEW"
  />

  <div class="divider my-0"></div>

  <HorizontalCard
    title="Tower of Hanoi Solver"
    img="/projectfiles/towerofhanoi.gif"
    desc="Tower of Hanoi Solver developed with C#"
    url="https://github.com/frvnzz/TowerOfHanoi-Solver"
    badge="NEW"
  />

  <div class="divider my-0"></div>

  <HorizontalCard
    title="Pokémon Team Builder"
    img="/projectfiles/nextjs.png"
    desc="React app to build Pokémon teams developed with Next.js"
    url="https://pokemonteamcreator-cc231014s-projects.vercel.app/"
  />

  <div class="divider my-0"></div>

  <HorizontalCard
    title="Pet Sitter App"
    img="/projectfiles/petapp.png"
    desc="Mobile User Interface Design for a Pet Sitter App"
    url="https://www.figma.com/design/anTmpWg2sgmLmzySbYCFsv/UID-Project---Pet-App?node-id=201-3265&p=f&t=UUGQHpJQWC8UHquO-0"
  />
</BaseLayout>
